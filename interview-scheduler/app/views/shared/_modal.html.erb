<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Interview</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: interview, local: true) do |form| %>

          <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :agenda %>
            <%= form.text_field :agenda, class: "form-control"%>
          </div>

          
          <div class="form-group">
            <%= form.label :members %>
            <select class="form-control" name="members" id="find-users">
            </select>
          </div>

          <div class="form-group">
            <%= form.label :start_time %>
            <%= form.datetime_field :start_time, class: "form-control", id: "dtp_beg" %>
          </div>

          <div class="form-group">
            <%= form.label :end_time %>
            <%= form.datetime_field :end_time, class: "form-control", id: "dtp_end" %>
          </div>

          <div class="form-group">
            <%= form.label :comments %>
            <%= form.text_area :comments, class: "form-control"%>
          </div>

          <div class="actions">
            <%= form.submit "Create", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>