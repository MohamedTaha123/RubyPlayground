<%= render 'shared/navbar' %>
<%= render partial: 'shared/modal', locals: { interview: @interview } %>

<div class="table-responsive">
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th class="cell-fixed" scope="col"> ID </th>
        <th class="cell-fixed" scope="col"> Title </th>
        <th class="cell-fixed" scope="col"> Agenda </th>
        <th class="cell-fixed" scope="col"> Start Time </th>
        <th class="cell-fixed" scope="col"> End Time </th>
        <th class="cell-fixed" scope="col"> Comments </th>
        <th class="cell-fixed" scope="col"> Created By </th>
      </tr>
    </thead>
    <tbody>
      <% @interviews.each do |interview| %>
        <tr>
          <th class="cell-fixed" scope="col"> <%= interview.id %> </th>
          <td class="cell-fixed"> <%= interview.title %> </td>
          <td class="cell-fixed"> <%= interview.agenda %> </td>
          <td class="cell-fixed"> <%= interview.start.to_formatted_s(:short) %> </td>
          <td class="cell-fixed"> <%= interview.end.to_formatted_s(:short) %> </td>
          <td class="cell-fixed" class="cell-fixed"> <%= interview.comments %> </td>
          <td class="cell-fixed"> <%= interview.user.username %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>